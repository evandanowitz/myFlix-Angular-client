// This file defines how TypeDoc should genereate documentation, which files to include or exclude, and other configuration options.
{
  "entryPoints": [
    "src/app",
    "server.ts"
    // "src/app/dialog/dialog.component.ts",
    // "src/app/login-form/login-form.component.ts",
    // "src/app/movie-card/movie-card.component.ts",
    // "src/app/nav-bar/nav-bar.component.ts",
    // "src/app/user-profile/user-profile.component.ts",
    // "src/app/user-registration-form/user-registration-form.component.ts",
    // "src/app/welcome-page/welcome-page.component.ts",
    // "src/app/app.component.ts",
    // "src/app/fetch-api-data.service.ts"
  ], // Define the entry point where your components and services are located.
  "tsconfig": "tsconfig.json", // Link to your TypeScript configuration.
  "out": "docs", // The output folder where the documentation will be generated.
  "exclude": [
    "**/node_modules/**",
    "**/dist/**",
    "**/*.spec.ts",
    "src/app/app.module.ts",
    "src/app/app.module.server.ts",
    "src/app/app-routing.module.ts",
    "src/main.ts",
    "src/main.server.ts"
  ], // Exclude tests and build folders.
  "includeVersion": true, // Optionally include project version in the docs.
  "name": "MyFlix Angular Client Documentation", // The name/title of the documentation.
  "hideGenerator": true, // Hide the "Generated by TypeDoc" message.
  "theme": "default", // Choose a theme (default or minimal).
  "excludeExternals": true // Exclude external modules from the docs.
}